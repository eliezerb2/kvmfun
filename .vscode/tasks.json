{
    "version": "2.0.0",
    "tasks": [
        { "label": "Uninstall",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-ExecutionPolicy", "Bypass",
                "-File", "${workspaceFolder}/.vscode/uninstall-service.ps1",
                "-ServiceName", "kvmfun",
            ],
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "problemMatcher": []
        },
        { "label": "Install",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-ExecutionPolicy", "Bypass",
                "-File", "${workspaceFolder}/.vscode/deploy-and-tail.ps1",
                "-ReleaseName", "kvmfun",
                "-ChartPath", "./helm/kvmfun",
                "-ValuesFile", "./helm/kvmfun/values.yaml",
                "-AppLabel", "kvmfun"
            ],
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "problemMatcher": []
        },
        {
            "label": "Build Docker Image",
            "type": "shell",
            "command": "powershell.exe",
            "args": [
                "-ExecutionPolicy", "Bypass",
                "-File", "${workspaceFolder}/.vscode/build-docker.ps1",
                "-dockerfilePath", "./docker",
                "-imageTag", "kvmfun",
                // "-NoCache"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ],
}