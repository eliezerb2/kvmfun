{
    "version": "2.0.0",
    "inputs": [
        {
            "id": "vmSSHPassword",
            "type": "promptString",
            "description": "Enter VM password:",
            "password": true
        }
    ],
    "tasks": [
        {
            "label": "Setup SSH Keys",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-ExecutionPolicy", "Bypass",
                "-File", "${workspaceFolder}/.vscode/setup-ssh-keys.ps1",
                // "-sshPassword", "${input:vmSSyHPassword}"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
        { "label": "Uninstall",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-ExecutionPolicy", "Bypass",
                "-File", "${workspaceFolder}/.vscode/uninstall-service.ps1",
                "-ServiceName", "kvmfun",
            ],
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "problemMatcher": []
        },
        { "label": "Install",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-ExecutionPolicy", "Bypass",
                "-File", "${workspaceFolder}/.vscode/deploy-and-tail.ps1",
                "-ReleaseName", "kvmfun",
                "-ChartPath", "./helm/kvmfun",
                "-ValuesFile", "./helm/kvmfun/values.yaml",
                "-AppLabel", "kvmfun"
            ],
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "problemMatcher": []
        },
        {
            "label": "Build App Image",
            "type": "shell",
            "command": "powershell.exe",
            "args": [
                "-ExecutionPolicy", "Bypass",
                "-File", "${workspaceFolder}/.vscode/build-docker.ps1",
                "-Dockerfile", "${workspaceFolder}/docker/Dockerfile",
                "-imageTag", "kvmfun:latest",
                // "-NoCache"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Build Test Image",
            "type": "shell",
            "command": "powershell.exe",
            "args": [
                "-ExecutionPolicy", "Bypass",
                "-File", "${workspaceFolder}/.vscode/build-docker.ps1",
                "-Dockerfile", "${workspaceFolder}/docker/Dockerfile.test",
                "-imageTag", "kvmfun-test:latest",
                // "-NoCache"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Run Helm Tests",
            "type": "shell",
            "command": "helm",
            "args": [
                "test",
                "kvmfun",
                "--logs"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "clear": true
            }
        }
    ],
}